@model WebBlogCore5.Models.Role

@{
    ViewData["Title"] = "XÓA QUYỀN";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">HOME</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Roles" asp-action="Index">QUẢN LÝ QUYỀN</a></li>
        <li class="breadcrumb-item"><a href="#">XÓA</a></li>
    </ol>
    <h6 class="slim-pagetitle">XÓA QUYỀN</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper mg-t-20">
        <div class="form-layout form-layout-7">
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                RoleName:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="RoleName" class="form-control" type="text" />
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Description:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="RoleDescription" class="form-control" type="text" />
            </div><!-- col-8 -->
        </div><!-- row -->
    </div><!-- form-layout -->

    <div style="text-align:center !important;" class="form-layout-footer mg-t-30">
    <form asp-area="Admin" asp-action="Delete" asp-route-id="@Model.RoleId">
        <input type="hidden" asp-for="RoleId" />
        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
        <a asp-area="Admin" asp-controller="Roles" asp-action="Index" class="btn btn-secondary bd-0">Hủy</a>
    </form>
    </div>
</div><!-- section-wrapper -->


